# this Dakota file creates a surrogate model of [test function #2]

environment
    tabular_data 
        tabular_data_file = "f2_surrogate.dat"                       # CHANGE THIS LINE
        top_method_pointer = 'LHS'
method
    id_method = 'LHS'
    model_pointer = 'SURROGATE_MODEL'
    sampling
        sample_type lhs
        samples = 2000
        seed = 123 

model
    id_model = 'SURROGATE_MODEL'
    surrogate global
    polynomial cubic
    dace_method_pointer = 'TRAIN'

method
  id_method = 'TRAIN'
  sampling
    sample_type lhs
    samples = 632                                                # CHANGE THIS LINE
    seed = 125
    model_pointer = 'TRUTH'

model
  id_model = 'TRUTH'
  single
 
variables                                                        # CHANGE THIS BLOCK
  continuous_design = 10                                        # CHANGE THIS LINE
    initial_point    10*1 
    lower_bounds     10*-3                                       # CHANGE THIS BLOCK   
    upper_bounds     10*3                                       # CHANGE THIS BLOCK
interface
    analysis_driver = "python f2_driver.py"                       # CHANGE THIS LINE
    fork
        parameters_file = 'params.in'
        results_file    = 'results.out'
        file_tag
        
responses
    objective_functions = 1
    no_gradients
    no_hessians