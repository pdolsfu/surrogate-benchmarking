# this Dakota file creates a surrogate model of [test function #14]

environment
    tabular_data 
        tabular_data_file = "f14_surrogate.dat"                       # CHANGE THIS LINE
        top_method_pointer = 'LHS'
method
    id_method = 'LHS'
    model_pointer = 'SURROGATE_MODEL'
    sampling
        sample_type lhs
        samples = 2000
        seed = 123 

model
    id_model = 'SURROGATE_MODEL'
    surrogate global
    moving_least_squares
    dace_method_pointer = 'TRAIN'

method
  id_method = 'TRAIN'
  sampling
    sample_type lhs
    samples = 660                                                # CHANGE THIS LINE
    seed = 125
    model_pointer = 'TRUTH'

model
  id_model = 'TRUTH'
  single
 
variables                                                      
  continuous_design = 30                                        # CHANGE THIS LINE
    initial_point    30*0                                        # CHANGE THIS LINE
    lower_bounds     30*-2                                        # CHANGE THIS BLOCK   
    upper_bounds     30*2                                      # CHANGE THIS BLOCK    

interface
    analysis_driver = "python f14_driver.py"                       # CHANGE THIS LINE
    fork
        parameters_file = 'params.in'
        results_file    = 'results.out'
        file_tag
        
responses
    objective_functions = 1
    no_gradients
    no_hessians