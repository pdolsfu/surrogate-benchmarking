# this Dakota file creates a surrogate model of [test function #11]

environment
    tabular_data 
        tabular_data_file = "f11_surrogate.dat"                       # CHANGE THIS LINE
        top_method_pointer = 'LHS'
method
    id_method = 'LHS'
    model_pointer = 'SURROGATE_MODEL'
    sampling
        sample_type lhs
        samples = 2000
        seed = 123 

model
    id_model = 'SURROGATE_MODEL'
    surrogate global
    polynomial cubic
    dace_method_pointer = 'TRAIN'

method
  id_method = 'TRAIN'
  sampling
    sample_type lhs
    samples = 543                                                # CHANGE THIS LINE
    seed = 125
    model_pointer = 'TRUTH'

model
  id_model = 'TRUTH'
  single
 
variables                                                      
  continuous_design = 11                                        # CHANGE THIS LINE
    initial_point    5*1 4*3 2*5                                        # CHANGE THIS LINE
    lower_bounds     0   0 0 0 0 2   2   2   1   4.5 4.5                                        # CHANGE THIS BLOCK   
    upper_bounds     1.6 2 2 2 2 8.0 8.0 8.0 6.0 6.0 6.0                                       # CHANGE THIS BLOCK    

interface
    analysis_driver = "python f11_driver.py"                       # CHANGE THIS LINE
    fork
        parameters_file = 'params.in'
        results_file    = 'results.out'
        file_tag
        
responses
    objective_functions = 1
    no_gradients
    no_hessians